<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div ng-controller="NavBarController">
        <div class="navbar navbar-default navbar-fixed-top Montserrat SiteColor" id="navbarmain" data-spy="scroll">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#/" class="navbar-brand" id="siteLogo">CarPooler</a>
                </div>
                <div class="navbar-collapse collapse" id="navbarfontmargin">
                    <ul class="nav navbar-nav">
                        <li><a href="#/UserTrips">My Trips</a></li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li><a href="#/AllTrips/All">View All Journeys</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" ng-show="status.isLoggedIn">
                        <li><a>Welcome {{user.username}}</a></li>
                        <li><a href="#/UserProfile/{{user.username}}">My Profile</a></li>
                        <li><a ng-click="logout()">Logout</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" ng-hide="status.isLoggedIn">
                        <li><a href="#/Login">Login</a></li>
                        <li><a href="#/Register">Register</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div>
            @RenderBody()
            
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>
    <script src="http://maps.googleapis.com/maps/api/js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")   
    @RenderSection("scripts", required: false)
    <script src="http://angular-ui.github.com/bootstrap/ui-bootstrap-tpls-0.2.0.js"></script>
    @*<link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css" rel="stylesheet">*@
</body>
</html>
